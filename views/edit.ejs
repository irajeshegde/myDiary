<% include partials/header %>
<div class="ui main text container segment">
	<div class="ui huge header">Update: <%=post.title%></div>
	<form class="ui form" action="/diary/<%=post._id%>?_method=PUT" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="diary[title]" value="<%=post.title%>">
		</div>
		<div class="field">
			<label>Body Content</label>
			<textarea name="diary[body]"><%=post.body%></textarea>
		</div>
		<input class="ui green big basic button" type="submit" value="Update">
	</form>
</div>
<% include partials/footer %>