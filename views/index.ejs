<% include partials/header %>
<div class="ui main text container">
	<div class="ui huge header">Your Diary!</div>
	<div class="ui top attached segment">
		<div class="ui divided items">
			<%diary.find(function(mydiary){ %>
			<div class="item">
				<div class="content">
					<a href="/diary/<%=mydiary._id%>" class="header"><%=mydiary.title%></a>
					<div class="meta">
						<span><%=mydiary.created.toDateString()%></span>
					</div>
					<div class="description">
						<% if (typeof mydiary.body == 'undefined' ) { %>
							<p></p>
						<% } else { %>
							<p> <%=mydiary.body.substring(0, 90) %>...</p>
						<% } %>
<!--						<p>< %-mydiary.body.substring(0,90)% >...</p>-->
					</div>			
					<div class="extra">
						<a  href="/diary/<%=mydiary._id%>" class="ui animated green basic button" tabindex="0">
							<div class="visible content">Read More</div>
							<div class="hidden content">
								<i class="right arrow icon"></i>
							</div>
						</a>
					</div>				
				</div>
			</div>
			<% }) %>
		</div>
	</div>
</div>
<% include partials/footer %>